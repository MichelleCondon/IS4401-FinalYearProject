<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:clickable="true"
    android:contextClickable="false"
    android:visibility="visible"
    tools:context=".ClockIn_Screen">

    <TextView
        android:id="@+id/lblOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="212dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/lblClockInOptions"
        android:textAlignment="center"
        android:textColor="#0B0A0A"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStartBreak"
        android:layout_width="125dp"
        android:layout_height="56dp"
        android:layout_marginBottom="276dp"
        android:background="@drawable/rounded_corners"
        android:text="@string/btnStartBreak"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.214"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnStartShift"
        android:layout_width="125dp"
        android:layout_height="56dp"
        android:layout_marginTop="41dp"
        android:background="@drawable/rounded_corners"
        android:text="@string/btnStartShift"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.216"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblOptions" />

    <Button
        android:id="@+id/btnEndBreak"
        android:layout_width="125dp"
        android:layout_height="56dp"
        android:layout_marginBottom="276dp"
        android:background="@drawable/rounded_corners"
        android:text="@string/btnEndBreak"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.778"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnEndShift"
        android:layout_width="125dp"
        android:layout_height="56dp"
        android:layout_marginTop="41dp"
        android:background="@drawable/rounded_corners"
        android:text="@string/btnEndShift"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.775"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblOptions" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="402dp"
        android:layout_height="171dp"
        android:contentDescription="@string/companyLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_logo_foreground" />

    <Button
        android:id="@+id/btnAuthenticate4"
        android:layout_width="164dp"
        android:layout_height="78dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/rounded_corners"
        android:text="Complete Authentication"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAuthenticate1"
        android:layout_width="164dp"
        android:layout_height="78dp"
        android:layout_marginStart="147dp"
        android:layout_marginEnd="122dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/rounded_corners"
        android:text="Complete Authentication"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAuthenticate3"
        android:layout_width="164dp"
        android:layout_height="78dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/rounded_corners"
        android:text="Complete Authentication"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAuthenticate2"
        android:layout_width="164dp"
        android:layout_height="77dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/rounded_corners"
        android:text="Complete Authentication"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtEmployeeName"
        android:layout_width="274dp"
        android:layout_height="45dp"
        android:layout_marginStart="74dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:hint="Enter Your Fullname Here"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btnAuthenticate1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtStartShift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="93dp"
        android:layout_marginTop="17dp"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStartShift" />

    <TextView
        android:id="@+id/txtEndShift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="32dp"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btnEndBreak"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtBreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="94dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStartBreak" />

    <TextView
        android:id="@+id/txtEndBreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="97dp"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEndBreak" />

</androidx.constraintlayout.widget.ConstraintLayout>