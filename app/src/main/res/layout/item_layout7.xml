<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBlue"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TableRow>

                    <TextView
                        android:id="@+id/lblEmployeeName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="16dp"
                        android:paddingEnd="0dp"
                        android:text="@string/txtEmployeeName"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/employeeName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="50dp"
                        android:paddingEnd="0dp"
                        android:textAlignment="viewStart"
                        android:textColor="#000000"
                        android:textSize="20sp" />


                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/lblWeekNumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="35dp"
                        android:paddingEnd="0dp"
                        android:text="@string/txtWeekNumber"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/weekNumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="50dp"
                        android:paddingEnd="0dp"
                        android:textAlignment="viewStart"
                        android:textColor="#000000"
                        android:textSize="20sp" />


                </TableRow>
                <!--Table Data-->
                <TableRow>

                    <TextView
                        android:id="@+id/lblMonday"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="89dp"
                        android:paddingEnd="0dp"
                        android:text="@string/txtMonday"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/monday"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="50dp"
                        android:paddingEnd="0dp"
                        android:textAlignment="viewStart"
                        android:textColor="#000000"
                        android:textSize="20sp" />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="100"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lblTuesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="87dp"
                        android:paddingEnd="0dp"
                        android:text="@string/txtTuesday"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tuesday"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="50dp"
                        android:paddingEnd="0dp"
                        android:textAlignment="viewStart"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="100"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lblWednesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="58dp"
                        android:paddingEnd="0dp"
                        android:text="@string/txtWednesday"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/wednesday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="50dp"
                        android:paddingEnd="0dp"
                        android:textAlignment="viewStart"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_weight="100"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lblThursday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="77dp"
                        android:paddingEnd="0dp"
                        android:text="@string/txtThursday"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/thursday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="50dp"
                        android:paddingEnd="0dp"
                        android:textAlignment="viewStart"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="100"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblFriday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="105dp"
                        android:paddingEnd="0dp"
                        android:text="@string/txtFriday"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/friday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="50dp"
                        android:paddingEnd="0dp"
                        android:textAlignment="viewStart"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="100"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblSaturday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="80dp"
                        android:paddingEnd="0dp"
                        android:text="@string/txtSaturday"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/saturday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="50dp"
                        android:paddingEnd="0dp"
                        android:textAlignment="viewStart"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="100"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblSunday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="92dp"
                        android:paddingEnd="0dp"
                        android:text="@string/txtSunday"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/sunday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="50dp"
                        android:paddingEnd="0dp"
                        android:textAlignment="viewStart"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </TableRow>

            </TableLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>