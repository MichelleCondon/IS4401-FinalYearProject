<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_layout"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--Table Heading-->
            <TableRow android:background="#3A82C9">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="10sp"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="10sp"
                    android:textSize="14sp" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/lblEmployeeName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="16dp"
                    android:paddingEnd="0dp"
                    android:text="@string/txtEmployeeName"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/employeeName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="50dp"
                    android:paddingEnd="0dp"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textSize="20sp" />


            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/lblWeekNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="27dp"
                    android:paddingEnd="0dp"
                    android:text="@string/txtWeekNumber"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/weekNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="50dp"
                    android:paddingEnd="0dp"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textSize="20sp" />


            </TableRow>
            <!--Table Data-->
            <TableRow>

                <TextView
                    android:id="@+id/lblMonday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="84dp"
                    android:paddingEnd="0dp"
                    android:text="@string/txtMonday"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/monday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="50dp"
                    android:paddingEnd="0dp"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textSize="20sp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblTuesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="80dp"
                    android:paddingEnd="0dp"
                    android:text="@string/txtTuesday"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tuesday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="50dp"
                    android:paddingEnd="0dp"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblWednesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="52dp"
                    android:paddingEnd="0dp"
                    android:text="@string/txtWednesday"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/wednesday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="50dp"
                    android:paddingEnd="0dp"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_weight="100"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblThursday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="72dp"
                    android:paddingEnd="0dp"
                    android:text="@string/txtThursday"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/thursday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="50dp"
                    android:paddingEnd="0dp"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="100"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblFriday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="100dp"
                    android:paddingEnd="0dp"
                    android:text="@string/txtFriday"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/friday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="50dp"
                    android:paddingEnd="0dp"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="100"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblSaturday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="77dp"
                    android:paddingEnd="0dp"
                    android:text="@string/txtSaturday"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/saturday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="50dp"
                    android:paddingEnd="0dp"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="100"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblSunday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="88dp"
                    android:paddingEnd="0dp"
                    android:text="@string/txtSunday"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/sunday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="50dp"
                    android:paddingEnd="0dp"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </TableRow>

        </TableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>