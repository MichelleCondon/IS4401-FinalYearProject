<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:autofillHints="@string/txtProductName"
    tools:context=".AddSchedule">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAccount"
        android:layout_width="207dp"
        android:layout_height="43dp"
        android:layout_marginStart="355dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="20dp"
        android:background="#00000000"
        android:drawableEnd="@drawable/ic_baseline_person_24"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/txtEmpName"
        android:layout_width="293dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:autofillHints="@string/txtProductName"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:hint="@string/txtEmployeeNameS"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtWeekNumber" />

    <EditText
        android:id="@+id/txtFriday"
        android:layout_width="293dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:autofillHints="@string/txtProductQuantity"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:hint="@string/hintFriday"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtThursday" />

    <EditText
        android:id="@+id/txtSaturday"
        android:layout_width="293dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:autofillHints="@string/txtProductQuantity"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:hint="Saturday Hours"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtFriday" />

    <EditText
        android:id="@+id/txtSunday"
        android:layout_width="293dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:autofillHints="@string/txtProductQuantity"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:hint="Sunday Hours"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSaturday" />

    <EditText
        android:id="@+id/txtTuesday"
        android:layout_width="293dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:autofillHints="@string/txtProductDescription"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:hint="@string/hintTuesday"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMonday" />

    <EditText
        android:id="@+id/txtMonday"
        android:layout_width="293dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:autofillHints="@string/txtProductName"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:hint="@string/hintMonday"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEmpName" />

    <EditText
        android:id="@+id/txtThursday"
        android:layout_width="293dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:autofillHints="@string/txtProductQuantity"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:hint="@string/hintThursday"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtWednesday" />

    <Button
        android:id="@+id/btnAddToSchedule"
        android:layout_width="143dp"
        android:layout_height="43dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corners"
        android:text="@string/btnAddHours"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSunday" />

    <EditText
        android:id="@+id/txtWednesday"
        android:layout_width="293dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:autofillHints="@string/txtProductPrice"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:hint="@string/hintWednesday"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTuesday" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/lblAddSchedule"
        android:textColor="#0E0E0E"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorBlue"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_management_menu" />

    <EditText
        android:id="@+id/txtWeekNumber"
        android:layout_width="293dp"
        android:layout_height="44dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="59dp"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:hint="Week Number"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>