<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductCheck">


    <TextView
        android:id="@+id/lblProductSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:paddingTop="15dp"
        android:layout_centerHorizontal="true"
        android:text="@string/lblProductSearch"
        android:textAlignment="center"
        android:textColor="#050505"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/lblInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblProductSearch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:text="Search for a product name below:"
        android:textAlignment="center"
        android:textColor="#050505"
        android:textSize="15sp" />

    <AutoCompleteTextView
        android:id="@+id/txtSearch"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:layout_below="@+id/lblInstructions"
        android:background="@drawable/edit_text_border"
        android:padding="10dp"
        android:drawableStart="@drawable/ic_baseline_search2_24" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/recyclerView1"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtSearch"/>


</RelativeLayout>