<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainMenu">

    <Button
        android:id="@+id/btnView"
        android:layout_width="140dp"
        android:layout_height="85dp"
        android:layout_marginBottom="48dp"
        android:drawableStart="@drawable/ic_baseline_table_view_24"
        android:text="@string/btnView"
        app:layout_constraintBottom_toTopOf="@+id/btnInventory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.811"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/lblMenu"
        android:textColor="#070707"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnInventory"
        android:layout_width="140dp"
        android:layout_height="85dp"
        android:layout_marginBottom="56dp"
        android:drawableStart="@drawable/ic_baseline_article_24"
        android:text="@string/btnInventory"
        app:layout_constraintBottom_toTopOf="@+id/btnCreateList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.811"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="140dp"
        android:layout_height="85dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="236dp"
        android:layout_marginBottom="56dp"
        android:drawableStart="@drawable/ic_baseline_add_24"
        android:text="@string/btnAdd"
        app:layout_constraintBottom_toTopOf="@+id/btnProductCheck"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnClock"
        android:layout_width="140dp"
        android:layout_height="85dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="48dp"
        android:drawableStart="@drawable/ic_baseline_fingerprint_24"
        android:text="@string/btnClock"
        app:layout_constraintBottom_toTopOf="@+id/btnAdd"
        app:layout_constraintEnd_toStartOf="@+id/btnView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnProductCheck"
        android:layout_width="140dp"
        android:layout_height="85dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="236dp"
        android:layout_marginBottom="192dp"
        android:drawableStart="@drawable/ic_baseline_search2_24"
        android:text="@string/btnProductCheck"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCreateList"
        android:layout_width="140dp"
        android:layout_height="85dp"
        android:layout_marginBottom="192dp"
        android:drawableStart="@drawable/ic_baseline_edit_24"
        android:text="@string/btnCreateList"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.811"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>