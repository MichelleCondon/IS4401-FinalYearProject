<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_layout"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp">

        <!--Table Heading-->
        <TableRow
            android:background="#3A82C9">

            <TextView
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_gravity="center_horizontal"
                android:padding="10sp"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_gravity="center_horizontal"
                android:padding="10sp"
                android:textSize="14sp" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/lblWeekNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="27dp"
                android:text="Week Number:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/weekNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="50dp"
                android:textAlignment="viewEnd"
                android:textColor="#000000"
                android:textSize="20sp" />


        </TableRow>
        <!--Table Data-->
        <TableRow>

            <TextView
                android:id="@+id/lblName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="84dp"
                android:text="Monday:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/monday"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="50dp"
                android:textAlignment="viewEnd"
                android:textColor="#000000"
                android:textSize="20sp" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="80dp"
                android:text="Tuesday:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tuesday"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="50dp"
                android:textAlignment="viewEnd"
                android:textColor="#000000"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="52dp"
                android:text="Wednesday:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/wednesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="50dp"
                android:textAlignment="viewEnd"
                android:textColor="#000000"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_weight="100"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="72dp"
                android:text="Thursday:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/thursday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="50dp"
                android:textAlignment="viewEnd"
                android:textColor="#000000"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="100"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblFriday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="100dp"
                android:text="Friday:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/friday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="50dp"
                android:textAlignment="viewEnd"
                android:textColor="#000000"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="100"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblSaturday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="77dp"
                android:text="Saturday:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/saturday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="50dp"
                android:textAlignment="viewEnd"
                android:textColor="#000000"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="100"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblSunday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="88dp"
                android:text="Sunday:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/sunday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="50dp"
                android:textAlignment="viewEnd"
                android:textColor="#000000"
                android:textSize="20sp" />
        </TableRow>

    </TableLayout>
</RelativeLayout>

